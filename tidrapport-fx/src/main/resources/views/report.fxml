<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.TreeTableView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.aigr20.tidrapport.fx.report.ReportController">
    <top>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="Arkiv">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#pickFile" text="Öppna tidrapport">
                                    <accelerator>
                                        <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                    </accelerator>
                                </MenuItem>
                                <MenuItem mnemonicParsing="false" onAction="#openSettingsDialog" text="Inställningar" />
                                <MenuItem mnemonicParsing="false" onAction="#closeFile" text="Stäng tidrapport" />
                        <MenuItem mnemonicParsing="false" onAction="#exitProgram" text="Avsluta" />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar prefHeight="40.0" prefWidth="200.0">
                    <items>
                        <ComboBox fx:id="yearSelector" prefWidth="150.0" promptText="År" />
                        <ComboBox fx:id="weekSelector" prefWidth="150.0" promptText="Vecka" />
                        <Button fx:id="reloadFileBtn" mnemonicParsing="false" onAction="#reload" text="Ladda om" />
                  <Button fx:id="closeFileBtn" mnemonicParsing="false" onAction="#closeFile" text="Stäng fil" />
                    </items>
                </ToolBar>
            </children>
        </VBox>
    </top>
    <bottom>
        <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <children>
                <Text fx:id="statusContent" strokeType="OUTSIDE" strokeWidth="0.0" />
            </children>
            <padding>
                <Insets left="16.0" right="16.0" />
            </padding>
        </HBox>
    </bottom>
    <center>
        <TreeTableView fx:id="weekTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
    </center>
</BorderPane>
