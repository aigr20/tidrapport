<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="se.aigr20.tidrapport.fx.settings.SettingsController">
    <padding>
        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
    </padding>
    <children>
        <GridPane hgap="8.0" vgap="8.0" VBox.vgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="-Infinity" minWidth="100.0" />
                <ColumnConstraints halignment="LEFT" hgrow="SOMETIMES" maxWidth="165.0" minWidth="120.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER" />
            <RowConstraints fillHeight="false" minHeight="10.0" prefHeight="150.0" vgrow="NEVER" />
            </rowConstraints>
            <children>
                <Label text="Arbetstimmar per dag:" />
                <Spinner fx:id="hoursPerDaySpinner" editable="true" GridPane.columnIndex="1">
                    <tooltip>
                        <Tooltip text="Antal timmar som förväntas arbetas per dag" />
                    </tooltip>
                </Spinner>
                <Label text="Arbetsdagar per vecka:" GridPane.rowIndex="1" />
                <Spinner fx:id="daysPerWeekSpinner" editable="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Exkluderade aktiviteter:" GridPane.rowIndex="2" GridPane.valignment="TOP" />
            <VBox spacing="8.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <children>
                  <ListView fx:id="excludedActivitiesList" prefWidth="165.0" />
                  <HBox prefHeight="100.0" prefWidth="200.0" spacing="8.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#addExcludedActivity" text="Lägg till" />
                        <Button fx:id="removeExcludedBtn" mnemonicParsing="false" onAction="#removeSelectedExcludedActivity" text="Ta bort" />
                     </children>
                  </HBox>
               </children>
            </VBox>
            </children>
        </GridPane>
        <ButtonBar buttonMinWidth="80.0" prefHeight="40.0" prefWidth="200.0">
            <buttons>
                <Button cancelButton="true" mnemonicParsing="false" onAction="#handleCancel" text="Avbryt" />
                <Button defaultButton="true" mnemonicParsing="false" onAction="#handleSave" text="Ok" />
            </buttons>
        </ButtonBar>
    </children>
</VBox>
